{{define "content"}}
<div class="row justify-content-center">
    <div class="col-md-8">
        <div id="createPostArea" class="card shadow-sm border-0 mb-4 d-none">
            <div class="card-body p-4">
                <h5 class="fw-bold mb-3">Create Post</h5>
                <form id="postForm">
                    <div class="mb-3">
                        <input type="text" id="postTitle" class="form-control form-control-lg border-0 bg-light" placeholder="Title" required>
                    </div>
                    <div class="mb-3">
                        <textarea id="postContent" class="form-control border-0 bg-light" rows="3" placeholder="What's on your mind?" required></textarea>
                    </div>
                    <div class="text-end">
                        <button type="submit" class="btn btn-primary px-5 fw-bold">Post</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="d-flex align-items-center justify-content-between mb-4">
            <h3 class="fw-bold mb-0">Campus Feed</h3>
            <button class="btn btn-sm btn-outline-secondary" onclick="location.reload()">Refresh</button>
        </div>

        <div id="feedContainer">
            <div class="text-center text-muted py-5">
                <div class="spinner-border text-primary mb-2" role="status"></div>
                <p>Loading the latest updates...</p>
            </div>
        </div>
    </div>
</div>

<script src="/static/js/feed.js"></script>
{{end}}

{{template "base" .}}